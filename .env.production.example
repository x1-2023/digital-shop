# .env.production.example
# Copy this file to `.env.production` on your server and fill in real secrets.
# DO NOT commit `.env.production` to git. This file contains placeholder values only.

# Application
NODE_ENV=production
PORT=5000
NEXTAUTH_URL=https://shop.webmmo.net

# Database (Postgres) - example format
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Session / JWT secret (generate a new one and keep it secret!)
# e.g. `openssl rand -hex 32` or `node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"`
SESSION_SECRET=

# Redis (optional)
REDIS_URL=

# S3 / Object storage (optional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Email / SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# Resend / other API keys
RESEND_API_KEY=

# Payment / Bank API (examples)
BANK_API_KEY=

# Misc
NEXT_PUBLIC_SITE_NAME=Digital Shop

# End of file
