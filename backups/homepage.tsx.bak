async function getProducts() {
  const products = await prisma.product.findMany({
    where: {
      active: true,
    },
    orderBy: {
      createdAt: 'desc',
    },
    include: {
      category: true,
    },
    take: 6,
  });
  return products;
}

async function getCategories() {
  const categories = await prisma.category.findMany({
    where: {
      active: true,
    },
    orderBy: {
      order: 'asc',
    },
  });
  return categories;
}

