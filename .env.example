DATABASE_URL="postgresql://user:password@localhost:5432/shop_db"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-this"

# SSO Shared Secret (Required for cross-service auth with AWF-MAIL)
# Must be the SAME value in both Shop and AWF-MAIL
# Generate with: openssl rand -hex 32
SSO_JWT_SECRET="your-shared-sso-secret-change-this"

# JWT Session Secret (Fallback if SSO_JWT_SECRET not set)
# Generate with: openssl rand -hex 32
SESSION_SECRET="generate-a-new-secret-here"

# App URL (Required for email links - change to your domain)
# Server-side only (not baked into build)
APP_URL="https://your-domain.com"
# Client-side (baked into build at build time)
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Email with Resend (Optional - for password reset emails)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=""
RESEND_FROM_EMAIL="no-reply@your-domain.com"

# Contact
NEXT_PUBLIC_TELEGRAM_URL="https://t.me/your_username"

# Backup Configuration (S3/R2)
BACKUP_S3_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"
BACKUP_S3_ACCESS_KEY="<your-access-key>"
BACKUP_S3_SECRET_KEY="<your-secret-key>"
BACKUP_S3_BUCKET="<bucket-name>"
BACKUP_S3_REGION="auto"

# Backup Notifications
BACKUP_TELEGRAM_TOKEN=""
BACKUP_TELEGRAM_CHAT_ID=""
